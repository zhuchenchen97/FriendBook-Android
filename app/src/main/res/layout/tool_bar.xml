<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:layout_scrollFlags="scroll|enterAlways"
    android:background="@drawable/side_nav_bar"
    android:weightSum="1"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/toolbar_text"
            android:text="全部动态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:id="@+id/add_new_book"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_book_add"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_toLeftOf="@+id/add_new_book"
            android:id="@+id/book_list"
            android:background="@drawable/ic_books"
            android:layout_centerInParent="true"
            android:visibility="gone"
           android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/add_new_friend"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_friend_add"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_toLeftOf="@+id/add_new_friend"
            android:id="@+id/friend_list"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_friends"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>