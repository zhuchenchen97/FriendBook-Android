<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >

        <ImageView
            android:onClick="back_perinfo"
            android:id="@+id/back_perinfo"
            android:layout_gravity="center"
            android:layout_width="46dp"
            android:layout_height="46dp"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/messageMainTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="编辑个人资料"
            android:layout_marginRight="46dp"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider0"
        android:layout_width="wrap_content"
        android:layout_height="5px"
        android:layout_below="@id/toolbar2"
        android:background="#bbb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/per_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"

                    android:text="昵称："
                    android:textColor="@android:color/black"
                    android:textSize="10pt" />

                <EditText
                    android:id="@+id/per_info_name_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/per_info_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_bg"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/per_info_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/per_info_name_et"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="性别："
                    android:textColor="@android:color/black"
                    android:textSize="10pt" />

                <EditText
                    android:id="@+id/per_info_sex_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/per_info_sex"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_bg"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/per_info_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/per_info_sex_et"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="地址："
                    android:textColor="@android:color/black"
                    android:textSize="10pt" />

                <EditText
                    android:id="@+id/per_info_add_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/per_info_add"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_bg"

                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="10pt" />


                <TextView
                    android:id="@+id/per_info_sig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/per_info_add_et"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="地址："
                    android:textColor="@android:color/black"
                    android:textSize="10pt" />

                <EditText
                    android:id="@+id/per_info_sig_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/per_info_sig"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_bg"

                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="10pt" />

                <Button
                    android:id="@+id/button_perinfo_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/per_info_sig"

                    android:layout_marginLeft="145dp"
                    android:layout_marginStart="145dp"
                    android:layout_marginTop="55dp"
                    android:background="#bcff9f"
                    android:textSize="20dp"
                    android:text="提交" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5px"
        android:background="#bbb" />
</LinearLayout>