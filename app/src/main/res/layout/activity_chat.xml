<?xml version="1.0" encoding="utf-8"?>
<com.example.friendbook.view.ChatActivityView android:id="@+id/chat_view"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fitsSystemWindows="true"
                            android:orientation="vertical">


    <com.example.friendbook.Util.keyboard.XhsEmoticonsKeyBoard
        android:id="@+id/ek_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/jmui_menu_title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:background="@color/jmui_jpush_blue">

                <ImageButton
                    android:id="@+id/jmui_return_btn"
                    android:layout_width="@dimen/title_bar_height"
                    android:layout_height="match_parent"
                    android:background="@drawable/jmui_back_btn_bg"
                    android:src="@drawable/back"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/jmui_return_btn"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/jmui_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="190dp"
                        android:singleLine="true"
                        android:text="昵称"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.friendbook.view.listview.DropDownListView
                    android:id="@+id/lv_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:fadingEdge="none"
                    android:fitsSystemWindows="true"
                    android:listSelector="#00000000"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollingCache="false"
                    android:smoothScrollbar="true"
                    android:transcriptMode="normal"/>

            </FrameLayout>
        </LinearLayout>


    </com.example.friendbook.Util.keyboard.XhsEmoticonsKeyBoard>

</com.example.friendbook.view.ChatActivityView>

