<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    >
    <LinearLayout
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/share_user_image"
            android:layout_width="40dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:background="#11000000"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/share_user_image">
            <TextView
                android:text="用户名"
                android:textColor="@color/drak"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_user_name"/>
            <TextView
                android:id="@+id/share_time"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/lightDark"
                android:text="19:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="这是微博内容。。。。。。。。。。
拉拉拉啊"
        android:textSize="16sp"
        android:id="@+id/share_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--显示照片的list  -->
        <com.lzy.ninegrid.NineGridView
            android:layout_margin="16dp"
            android:id="@+id/nine_gridview"
            android:layout_width="match_parent"
            app:ngv_mode="fill"
            app:ngv_gridSpacing="4dp"
            android:layout_height="wrap_content">
        </com.lzy.ninegrid.NineGridView>
    <View
        android:id="@+id/share_line"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <CheckBox
            android:layout_centerVertical="true"
            android:id="@+id/share_favorite_checkbox"
            android:layout_alignParentRight="true"
            android:button="@drawable/ic_favorite_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/share_comment_button"
            android:layout_toLeftOf="@+id/share_favorite_checkbox"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_share_comment"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/share_favorite_text"
        android:minHeight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</android.support.v7.widget.CardView>